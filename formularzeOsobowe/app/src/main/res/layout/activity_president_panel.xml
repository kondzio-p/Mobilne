<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Przycisk Zamów kawę -->
    <Button
        android:id="@+id/order_coffee_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zamów kawę"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Przycisk Zamów herbatę -->
    <Button
        android:id="@+id/order_tea_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zamów herbatę"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/order_coffee_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Przycisk Zobacz aplikacje -->
    <Button
        android:id="@+id/view_applications_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zobacz aplikacje"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/order_tea_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Przycisk Zobacz pracowników -->
    <Button
        android:id="@+id/view_employees_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zobacz pracowników"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/view_applications_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Przycisk Resetuj dane -->
    <Button
        android:id="@+id/reset_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resetuj dane"
        android:backgroundTint="#FF0000"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/view_employees_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Przycisk Dodaj przykładowych aplikantów -->
    <Button
        android:id="@+id/add_sample_applicants_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dodaj 10 przykładowych aplikantów"
        android:backgroundTint="#FFD700"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/reset_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Obraz Cristiano Ronaldo - SIP (ukryty domyślnie) -->
    <ImageView
        android:id="@+id/ronaldoSIP_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/cristiano_sip"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/order_coffee_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Obraz Cristiano Ronaldo - Complete (ukryty domyślnie) -->
    <ImageView
        android:id="@+id/ronaldoComplete_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/cristiano_complete"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/order_coffee_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Przycisk Cofnij -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:backgroundTint="#1F2764"
        android:text="Cofnij"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
