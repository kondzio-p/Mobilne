<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#F0F0F0"
    android:padding="20dp">

    <ImageView
        android:id="@+id/widokObrazu"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <Button
        android:id="@+id/przyciskLosowania"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2196F3"
        android:text="Losuj obrazek"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/licznikPozostalychObrazkow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="PozostaÅ‚o: 5"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/numerIndeksuObrazu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Indeks: 1, Nazwa: image1"
        android:textSize="16sp"
        android:visibility="gone" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/przyciskRestartu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FF0000"
        android:text="Reset"
        android:textColor="@android:color/white" />

</LinearLayout>
